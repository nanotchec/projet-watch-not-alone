{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": [
        "node_modules/.prisma/client"
      ]
    }
  },
  "include": [
    "src",
    "prisma",
    "prisma.config.ts"
  ]
}